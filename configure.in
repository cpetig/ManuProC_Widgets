# $Id: configure.in,v 1.15 2004/04/29 16:30:02 christof Exp $

AC_INIT(src/SimpleTreeModel.h)

AM_INIT_AUTOMAKE(ManuProC_Widgets, 0.8.0)
AC_CONFIG_HEADERS(config.h)

AC_PREFIX_DEFAULT(/usr/local)

AC_PROG_CXX
AM_PROG_LIBTOOL
AC_LANG_CPLUSPLUS

AC_SUBST(CFLAGS)
AC_SUBST(CPPFLAGS)
AC_SUBST(LDFLAGS)
AC_SUBST(CXXFLAGS)

PETIG_CHECK_COMMONXX
PETIG_CHECK_COMMONGTK2
MPC_CHECK_SIGC_MATCH

KOMPONENTEN_INCLUDES="$COMMONXX_INCLUDES $COMMONGTK2_INCLUDES -I\$(top_srcdir)/src"
KOMPONENTEN_LDFLAGS="$COMMONXX_LDFLAGS $COMMONGTK2_LDFLAGS"
KOMPONENTEN_LIBS="\$(top_srcdir)/src/libManuProC_Widgets.a $COMMONXX_LIBS $COMMONGTK2_LIBS"
AC_SUBST(KOMPONENTEN_INCLUDES)
AC_SUBST(KOMPONENTEN_LDFLAGS)
AC_SUBST(KOMPONENTEN_LIBS)

AC_OUTPUT(Makefile src/Makefile examples/Makefile \
   examples/dwhouse/Makefile examples/tree_simplest/Makefile \
   examples/MVC/Makefile examples/newtree/Makefile)
